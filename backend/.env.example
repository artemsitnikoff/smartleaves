# ===========================================
# Переменные окружения для "Умные листочки"
# ===========================================
#
# Скопируйте этот файл в .env и заполните своими значениями:
# cp .env.example .env

# ===========================================
# DJANGO SETTINGS
# ===========================================

# Секретный ключ Django (сгенерируйте новый для production!)
# Генерация: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-please-change-this-in-production

# Debug режим (True для разработки, False для production)
DEBUG=True

# Разрешенные хосты (через запятую)
ALLOWED_HOSTS=localhost,127.0.0.1

# ===========================================
# DATABASE
# ===========================================

# PostgreSQL настройки
DB_NAME=smartleaves
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# ===========================================
# CORS SETTINGS
# ===========================================

# Разрешенные источники для CORS (URL фронтенда)
# Для локальной разработки с Vue.js на порту 5173 (Vite) или 3000
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173

# ===========================================
# WAGTAIL
# ===========================================

# Базовый URL для Wagtail (используется для генерации ссылок в email и т.д.)
WAGTAIL_BASE_URL=http://localhost:8000

# ===========================================
# EMAIL SETTINGS (для production)
# ===========================================

EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@smartleaves.ru

# ===========================================
# SENTRY (опционально, для отслеживания ошибок в production)
# ===========================================

SENTRY_DSN=
